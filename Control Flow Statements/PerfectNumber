// Program  find perfect number 

public class Main {
  public static void main(String[] args) {
     int num = 28;
     int sum = 0;
    
    for(int i = 1;i<num;i++){
      if(num%i == 0){
        sum = sum + i;       /// adding the factors 

      }

    }
    if (sum == num){        // if the sum is equal to the number then perfect number 
      System.out.println(" Perfect Number ");  
    }
    else {
      System.out.println(" Not Perfect ");
    }
  }
}
